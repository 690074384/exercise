  <!--</error-page>-->



  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>

  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>10080</session-timeout>
  </session-config>
</web-app>
